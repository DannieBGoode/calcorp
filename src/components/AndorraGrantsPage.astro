---
import Container from "@components/container.astro";

const { content } = Astro.props;
---

<Container class="pb-20">
  <section class="mt-14 max-w-4xl relative">
    <p class="text-sm font-semibold uppercase tracking-[0.16em] text-indigo-700">{content.eyebrow}</p>
    <h1 class="mt-3 text-4xl md:text-5xl font-bold tracking-tight text-slate-900">{content.title}</h1>
    <p class="mt-5 text-lg text-slate-700 leading-relaxed">{content.intro}</p>
    <div aria-hidden="true" class="pointer-events-none mt-6 h-1.5 w-28 rounded-full bg-gradient-to-r from-indigo-600 via-violet-500 to-sky-500"></div>
  </section>

  <section class="mt-10 rounded-2xl border border-indigo-200 bg-gradient-to-br from-indigo-50 to-white p-6 md:p-8 max-w-4xl shadow-sm">
    <h2 class="text-2xl font-semibold text-slate-900">{content.officialSource.title}</h2>
    <p class="mt-3 text-slate-700 leading-relaxed">{content.officialSource.description}</p>
    <a
      href={content.officialSource.url}
      target="_blank"
      rel="noopener noreferrer"
      class="inline-flex mt-5 items-center gap-2 font-semibold text-indigo-700 hover:text-indigo-900 underline underline-offset-4 transition-colors"
    >
      {content.officialSource.cta}
      <span aria-hidden="true">â†—</span>
    </a>
  </section>

  <section class="mt-12 max-w-4xl">
    <h2 class="text-2xl font-semibold text-slate-900">{content.companyBudgetTitle}</h2>
    <p class="mt-3 text-slate-700 leading-relaxed">{content.companyBudgetIntro}</p>
    <div class="mt-5 grid gap-3 md:grid-cols-2">
      {content.companyBudgets.map((tier) => (
        <article class="group rounded-xl border border-slate-200 bg-white p-4 shadow-sm transition-all duration-300 hover:-translate-y-0.5 hover:shadow-md">
          <h3 class="text-lg font-semibold text-slate-900">{tier.name}</h3>
          <p class="mt-1 text-sm text-slate-600">{tier.workers}</p>
          <p class="mt-3 text-2xl font-bold text-indigo-700">{tier.amount}</p>
          <div class="mt-3 h-1 w-full rounded-full bg-slate-100 overflow-hidden">
            <div class="h-full w-1/2 rounded-full bg-indigo-500 transition-all duration-300 group-hover:w-2/3"></div>
          </div>
        </article>
      ))}
    </div>
  </section>

  <section class="mt-12 max-w-4xl">
    <h2 class="text-2xl font-semibold text-slate-900">{content.featuredSolutionsTitle}</h2>
    <p class="mt-3 text-slate-700 leading-relaxed">{content.featuredSolutionsIntro}</p>
    <div class="mt-6 space-y-6">
      {content.featuredSolutions.map((solution) => (
        <article class="group rounded-2xl border border-slate-200 bg-white p-6 shadow-sm transition-all duration-300 hover:shadow-lg hover:-translate-y-0.5">
          <div class="flex flex-col gap-2 md:flex-row md:items-center md:justify-between">
            <h3 class="text-xl font-semibold text-slate-900">{solution.title}</h3>
            <p class="inline-flex items-center rounded-full bg-indigo-50 px-3 py-1 text-lg font-bold text-indigo-700">{solution.amount}</p>
          </div>
          <p class="mt-3 text-sm text-slate-600">{solution.subsidyRule}</p>
          <p class="mt-4 text-slate-700 leading-relaxed">{solution.summary}</p>

          <h4 class="mt-5 text-sm font-semibold uppercase tracking-wide text-slate-900">{content.featuresLabel}</h4>
          <ul class="mt-2 space-y-2 text-slate-700">
            {solution.features.map((feature) => (
              <li class="flex gap-2">
                <span aria-hidden="true" class="mt-1.5 inline-block h-2 w-2 rounded-full bg-indigo-500"></span>
                <span>{feature}</span>
              </li>
            ))}
          </ul>

          <h4 class="mt-5 text-sm font-semibold uppercase tracking-wide text-slate-900">{content.benefitsLabel}</h4>
          <ul class="mt-2 space-y-2 text-slate-700">
            {solution.benefits.map((benefit) => (
              <li class="flex gap-2">
                <span aria-hidden="true" class="mt-1.5 inline-block h-2 w-2 rounded-full bg-emerald-500"></span>
                <span>{benefit}</span>
              </li>
            ))}
          </ul>

          {solution.offeredByCalcorp && (
            <p class="mt-5 inline-flex rounded-full bg-emerald-100 px-3 py-1 text-sm font-semibold text-emerald-800">
              {content.calcorpOfferBadge}
            </p>
          )}
        </article>
      ))}
    </div>
  </section>

  <section class="mt-12 max-w-4xl rounded-2xl border border-amber-300 bg-gradient-to-br from-amber-50 to-white p-6 md:p-8 shadow-sm">
    <h2 class="text-2xl font-semibold text-slate-900">{content.legalNotice.title}</h2>
    <p class="mt-3 text-slate-700 leading-relaxed">{content.legalNotice.body}</p>
    <ul class="mt-5 list-disc pl-6 space-y-2 text-slate-700">
      {content.references.map((reference) => (
        <li>
          <a
            href={reference.url}
            target="_blank"
            rel="noopener noreferrer"
            class="underline underline-offset-4 hover:text-slate-900 transition-colors"
          >
            {reference.label}
          </a>
        </li>
      ))}
    </ul>
  </section>
</Container>
