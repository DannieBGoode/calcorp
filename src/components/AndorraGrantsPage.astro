---
import Container from "@components/container.astro";

const { content } = Astro.props;
---

<Container class="pb-16">
  <section class="mt-14 max-w-4xl">
    <p class="text-sm font-semibold uppercase tracking-[0.16em] text-indigo-700">{content.eyebrow}</p>
    <h1 class="mt-3 text-4xl md:text-5xl font-bold tracking-tight text-slate-900">{content.title}</h1>
    <p class="mt-4 text-lg text-slate-700 leading-relaxed">{content.intro}</p>
  </section>

  <section class="mt-10 rounded-2xl border border-indigo-200 bg-indigo-50/70 p-6 md:p-8 max-w-4xl">
    <h2 class="text-2xl font-semibold text-slate-900">{content.officialSource.title}</h2>
    <p class="mt-3 text-slate-700 leading-relaxed">{content.officialSource.description}</p>
    <a
      href={content.officialSource.url}
      target="_blank"
      rel="noopener noreferrer"
      class="inline-flex mt-5 items-center gap-2 font-semibold text-indigo-700 hover:text-indigo-900 underline underline-offset-4"
    >
      {content.officialSource.cta}
      <span aria-hidden="true">â†—</span>
    </a>
  </section>

  <section class="mt-12 max-w-4xl">
    <h2 class="text-2xl font-semibold text-slate-900">{content.companyBudgetTitle}</h2>
    <p class="mt-3 text-slate-700 leading-relaxed">{content.companyBudgetIntro}</p>
    <div class="mt-5 grid gap-3 sm:grid-cols-2 lg:grid-cols-4">
      {content.companyBudgets.map((tier) => (
        <article class="rounded-xl border border-slate-200 bg-white p-3">
          <p class="text-2xl" aria-hidden="true">{tier.icon}</p>
          <h3 class="mt-1 text-sm font-semibold text-slate-900 leading-tight">{tier.name}</h3>
          <p class="mt-1 text-xs text-slate-600">{tier.workers}</p>
          <p class="mt-2 text-base font-bold text-indigo-700">{tier.amount}</p>
        </article>
      ))}
    </div>
  </section>

  <section class="mt-12 max-w-4xl">
    <h2 class="text-2xl font-semibold text-slate-900">{content.featuredSolutionsTitle}</h2>
    <p class="mt-3 text-slate-700 leading-relaxed">{content.featuredSolutionsIntro}</p>

    <div class="mt-6 grid gap-4 md:grid-cols-2">
      {content.featuredSolutions.map((solution) => (
        <article class="rounded-2xl border border-slate-200 bg-white p-5">
          <div class="flex items-start gap-3">
            <span class="inline-flex h-10 w-10 shrink-0 items-center justify-center rounded-lg bg-indigo-100 text-xl" aria-hidden="true">
              {solution.icon}
            </span>
            <div>
              <h3 class="text-lg font-semibold text-slate-900">{solution.title}</h3>
              <p class="text-sm font-bold text-indigo-700">{solution.amount}</p>
            </div>
          </div>

          <p class="mt-3 text-xs text-slate-500">{solution.subsidyRule}</p>
          <p class="mt-3 text-slate-700 leading-relaxed">{solution.summary}</p>

          <ul class="mt-4 space-y-2 text-sm text-slate-700">
            {solution.features.map((feature) => (
              <li class="flex gap-2">
                <span aria-hidden="true" class="mt-1.5 inline-block h-1.5 w-1.5 rounded-full bg-indigo-500"></span>
                <span>{feature}</span>
              </li>
            ))}
          </ul>

          {solution.offeredByCalcorp && (
            <p class="mt-4 inline-flex rounded-full bg-emerald-100 px-3 py-1 text-xs font-semibold text-emerald-800">
              {content.calcorpOfferBadge}
            </p>
          )}
        </article>
      ))}
    </div>
  </section>

  <section class="mt-12 max-w-4xl rounded-2xl border border-amber-300 bg-amber-50 p-6 md:p-8">
    <h2 class="text-2xl font-semibold text-slate-900">{content.legalNotice.title}</h2>
    <p class="mt-3 text-slate-700 leading-relaxed">{content.legalNotice.body}</p>
    <ul class="mt-5 list-disc pl-6 space-y-2 text-slate-700">
      {content.references.map((reference) => (
        <li>
          <a
            href={reference.url}
            target="_blank"
            rel="noopener noreferrer"
            class="underline underline-offset-4 hover:text-slate-900"
          >
            {reference.label}
          </a>
        </li>
      ))}
    </ul>
  </section>
</Container>
