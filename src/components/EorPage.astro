---
import Container from "@components/container.astro";
import Layout from "@layouts/Layout.astro";
import Sectionhead from "@components/sectionhead.astro";
import EorFeatures from "@components/eorFeatures.astro";
import Cta from "@components/cta.astro";

const { content, lang = "en" } = Astro.props;
---

<Layout title={content.title}>
  <Container>
    <Sectionhead>
      <Fragment slot="title">{content.title}</Fragment>
      <Fragment slot="desc">{content.description}</Fragment>
    </Sectionhead>

    <div class="flex flex-col gap-6 mx-auto max-w-3xl mt-12 text-lg text-slate-600">
      {content.intro.map((paragraph) => (
        <p>{paragraph}</p>
      ))}
    </div>

    <EorFeatures lang={lang} />

    <div class="mt-12">
      <Cta lang={lang} />
    </div>
  </Container>
</Layout>
