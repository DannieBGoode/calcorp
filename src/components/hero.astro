---
import { Picture } from "astro:assets";
import heroImage from "assets/hero.png";
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon/components";

const { lang = "en" } = Astro.props;
import { heroTexts as heroTextsEn } from "../content/hero/hero-texts.js";
import { heroTexts as heroTextsEs } from "../content/hero/hero-texts.es.js";
import { heroTexts as heroTextsCat } from "../content/hero/hero-texts.cat.js";

let heroTexts;
if (lang === "es") {
  heroTexts = heroTextsEs;
} else if (lang === "cat") {
  heroTexts = heroTextsCat;
} else {
  heroTexts = heroTextsEn;
}
---

<main
  class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24">
  <div class="py-6 md:order-1 hidden md:block">
    <Picture
      src={heroImage}
      alt="Astronaut in the air"
      widths={[200, 400, 600]}
      sizes="(max-width: 800px) 100vw, 620px"
      loading="eager"
      format="avif"
    />
  </div>
  <div>
    <h1
      class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
      {heroTexts.heading}
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      {heroTexts.paragraph}
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link
        href="#services"
        class="flex gap-1 items-center justify-center"
        rel="noopener">
        <Icon class="text-white w-5 h-5" name="bx:bxs-cloud-download" />
         {heroTexts.exploreServices}
      </Link>
      <Link
        size="lg"
        style="outline"
        rel="noopener"
        href={
          lang === "es"
            ? "/es/contacto"
            : lang === "cat"
            ? "/cat/contacte"
            : "/contact"
        }
        class="flex gap-1 items-center justify-center">
        <Icon class="text-black w-4 h-4" name="bx:bxs-message" />
         {heroTexts.contactUs}
      </Link>
    </div>
  </div>
</main>
